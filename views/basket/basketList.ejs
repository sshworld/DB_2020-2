<div class="container h-100">
    <div class="user-form container">
      <% if (userName != null) { %>
      <h2><%=userName %> 님의 주문 리스트</h2>
      <% } %>
    </div>
    <br />
  
    <div class="">
      <table class="table table-striped">
        <h1>OrderList</h1>
        <thead>
          <tr>
            <th scope="col">상품정보</th>
            <th scope="col">주문일자</th>
            <th scope="col">주문번호</th>
            <th scope="col">주문금액</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for(var i = orderList.length - 1; i >= 0 ; i--) {%>
          <tr>
            <th scope="row"><%= orderList[i].BOOK_NAME %> 등 <%= orderList[i].TOTAL %>권</th>
            <td><%=orderList[i].CREATED_AT %></td>
            <td><a style="cursor: pointer" href="/order/<%=sess%>/<%=orderList[i].ORDER_ID%>/detail"><%=orderList[i].ORDER_NUM + '-' + orderList[i].ORDER_ID %></a></td>
            <td><%=orderList[i].ORDER_AMOUNT %>원</td>
            <td>
              <a style="cursor: pointer" onclick="deleteInfo('/order/<%=orderList[i].ORDER_ID%>/delete')">주문취소</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  
  <script>
    function deleteInfo(url) {
  
      var temp = confirm("정말로 취소하시겠습니까?");
  
      if (temp) {
        location.href = url;
      }
      else {
        location.href = '/order/orderList';
      }
  
    }
  </script>
  