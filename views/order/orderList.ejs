<div class="container h-100">
  <div class="user-form container">
    <% if (userName != null) { %>
    <h2><%=userName %> 님의 주문 리스트</h2>
    <% } %>
  </div>
  <br />

  <div class="">
    <table class="table table-striped">
      <h1>Address</h1>
      <thead>
        <tr>
          <th scope="col">상품정보</th>
          <th scope="col">주문일자</th>
          <th scope="col">주문번호</th>
          <th scope="col">주문금액</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i < myAddr.length; i++) {%>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><%=myAddr[i].SHIPPING_NUM %></td>
          <td><%=myAddr[i].BASIC_ADDR %></td>
          <td><%=myAddr[i].DETAIL_ADDR %></td>
          <td>
            <a href="/myPage/<%=sess%>/<%=myAddr[i].ADDR_UID%>/addr">수정</a
            >&nbsp;&nbsp;&nbsp;<a
              style="cursor: pointer"
              onclick="deleteInfo('/myPage/<%=sess%>/<%=myAddr[i].ADDR_UID%>/deleteAddr')"
              >주문취소</a
            >
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

<script>
  function deleteInfo(url) {

    var temp = confirm("정말로 삭제하시겠습니까?");

    if (temp) {
      location.href = url;
    }
    else {
      location.href = '/myPage/<%=sess%>';
    }

  }
</script>
